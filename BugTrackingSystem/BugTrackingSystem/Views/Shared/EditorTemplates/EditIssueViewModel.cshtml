@model BugTrackingSystem.ViewModels.EditIssueViewModel

<div class="form-group">
    @Html.LabelFor(model => model.IssueData.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.IssueData.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.IssueData.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IssueData.Priority, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EnumDropDownListFor(model => model.IssueData.Priority, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IssueData.Priority, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IssueData.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.IssueData.Summary, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.IssueData.Summary, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IssueData.AssigneeId, "AssigneeId", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("IssueData.AssigneeId", Model.AvailableUsers, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IssueData.AssigneeId, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IssueData.ProjectId, "ProjectId", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("IssueData.ProjectId", Model.AvailableProjects, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IssueData.AssigneeId, "", new { @class = "text-danger" })
    </div>
</div>