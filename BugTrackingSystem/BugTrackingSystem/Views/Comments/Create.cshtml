@model BugTrackingSystem.Models.IssueComment

<div id="addComment" class="form-horizontal">
    @using (Ajax.BeginForm(new AjaxOptions
    {
        Url = Url.Action("Create", "Comments", new { id = ViewBag.IssueId }),
        UpdateTargetId = "addComment",
        InsertionMode = InsertionMode.InsertBefore
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Add comment:</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CommentText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CommentText, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>